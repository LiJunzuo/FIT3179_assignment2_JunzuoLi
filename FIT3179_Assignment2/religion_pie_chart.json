{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Comparison of the number of Christians and Muslims globally",
    "data": {
      "values": [
        {"religion": "Christians", "population": 2.3},
        {"religion": "Muslims", "population": 1.9}
      ]
    },
    "mark": "arc",
    "encoding": {
      "theta": {
        "field": "population",
        "type": "quantitative",
        "stack": true
      },
      "color": {
        "field": "religion",
        "type": "nominal",
        "scale": {"range": ["#1f77b4", "#ff7f0e"]},
        "legend": {"title": "Religion"}
      },
      "tooltip": [
        {"field": "religion", "type": "nominal"},
        {"field": "population", "type": "quantitative", "title": "Population (in billions)"}
      ]
    }
  }
  
  
  